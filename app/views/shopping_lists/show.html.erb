<div class="container">
  <div class="container2">
    <h1>Shopping List</h1>
      <ul>
        <% @shopping_list.doses_shopping_lists.each do |dose_sl| %>
          <div class="card-shopping-list">
            <li>
              <div class="ok">
                <div class="ingredients-doses">
                  <input type="checkbox">
                  <span> <%= dose_sl.dose.quantity %> <%= dose_sl.dose.ingredient.name %></span>
                </div>
                  <%= link_to ('<i class="fas fa-trash-alt"></i>').html_safe, doses_shopping_list_path(dose_sl), method: :delete %>
              </div>
            </li>
          </div>
        <% end %>
      </ul>
  </div>
</div>
